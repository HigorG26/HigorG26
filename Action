using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class acao : MonoBehaviourd
{
	[SerializerField]
	private int vida = 3;

	public void TomaDano (int dano){
		
		vida -= dano;
		
		if(vida <= 0){
			morre();
		}
	}

	private voida Morre(){
		Destroy(gameObject);
	}
}
